<div class="comments">
  {{#each this}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{format_date created_at}}
    </div>
    <div>
      <label for="comment-text">Comment</label>
      <input id="comment-text" name="comment-text" />
      {{comment_text}}
    </div>
     {{/each}}
  </section>
</div>

<div>
      <button type="submit">add comment</button>
      <button type="button" class="like-btn">like</button>
</div>

{{> comments post.comments}}


{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/likes.js"></script>
{{!-- <script src="/javascript/add-post.js"></script> --}}
{{/if}}